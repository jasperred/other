<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="print" extends="struts-default,jasperreports-default">
		<interceptors>
			<interceptor name="authority"
				class="com.sunmw.web.common.interceptor.AuthorityInterceptor"></interceptor>
			<interceptor-stack name="AuthorityStack">
				<interceptor-ref name="authority">
					<param name="excludeMethods">welcome,login</param>
				</interceptor-ref>
				<interceptor-ref name="paramsPrepareParamsStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<global-results>
			<result name="login" type="redirect">viewLogin2.action</result>
		</global-results>
		<action name="printServiceOrderAction" class="serviceOrderPrintAction" method="printServiceOrder">
            <result name="success" type="jasper">
                <param name="location">
                    /application/printTemplate/ServiceOrderReport.jasper
                </param>
                <param name="dataSource">serviceOrderPrintBean</param>
                <param name="format">PDF</param>
            </result>
             <result name="error" type="dispatcher">
				<param name="location">/application/orderByRicoh/orderNewError.jsp</param>
			</result>
			<interceptor-ref name="AuthorityStack"></interceptor-ref>
        </action>
        <action name="printServiceReturnAction" class="serviceReturnPrintAction" method="printServiceReturn">
            <result name="success" type="jasper">
                <param name="location">
                    /application/printTemplate/ServiceReturnReport.jasper
                </param>
                <param name="dataSource">serviceReturnPrintBean</param>
                <param name="format">PDF</param>
            </result>
             <result name="error" type="dispatcher">
				<param name="location">/application/orderByRicoh/orderNewError.jsp</param>
			</result>
			<interceptor-ref name="AuthorityStack"></interceptor-ref>
        </action>
		<action name="viewServiceReturnInfoAction" class="serviceReturnPrintAction"
			method="viewPrintServiceReturn">
			<result name="success" type="dispatcher">
				<param name="location">/application/printTemplate/ServiceReturnReport.jsp</param>
			</result>
			<result name="error" type="dispatcher">
				<param name="location">/application/orderByRicoh/orderNewError.jsp</param>
			</result>
			<interceptor-ref name="AuthorityStack"></interceptor-ref>
		</action>
		
	</package>
</struts>