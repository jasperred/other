<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="inventory" extends="json-default">
		<interceptors>
			<interceptor name="authority"
				class="com.sunmw.web.common.interceptor.AuthorityInterceptor"></interceptor>
			<interceptor-stack name="AuthorityStack">
				<interceptor-ref name="authority">
					<param name="excludeMethods">welcome,login</param>
				</interceptor-ref>
				<interceptor-ref name="paramsPrepareParamsStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<global-results>
			<result name="login" type="redirect">viewLogin2.action</result>
		</global-results>
		<action name="viewInventorySearchByShopAction" class="loginAction"
			method="index">
			<result name="success" type="dispatcher">
				<param name="location">application/inventoryByRicoh/inventorySearchByShop.jsp</param>
			</result>
			<interceptor-ref name="AuthorityStack"></interceptor-ref>
		</action>
		<action name="searchInventoryByShopAction" class="inventorySearchAction"
			method="searchInventoryByShop">
			<result name="success" type="dispatcher">
				<param name="location">/application/inventoryByRicoh/inventoryResult.jsp</param>
			</result>
			<interceptor-ref name="AuthorityStack"></interceptor-ref>
		</action>
		<action name="viewInventorySearchByRcnAction" class="loginAction"
			method="index">
			<result name="success" type="dispatcher">
				<param name="location">application/inventoryByRicoh/inventorySearchByRcn.jsp</param>
			</result>
			<interceptor-ref name="AuthorityStack"></interceptor-ref>
		</action>
		<action name="searchInventoryByRcnAction" class="inventorySearchAction"
			method="searchInventoryByRcn">
			<result name="success" type="dispatcher">
				<param name="location">/application/inventoryByRicoh/inventoryResult.jsp</param>
			</result>
			<interceptor-ref name="AuthorityStack"></interceptor-ref>
		</action>
		
	</package>
</struts>